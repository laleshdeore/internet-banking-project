@model BankingWeb.Models.CurrencyModel

@{
    ViewBag.Title = "Currency";
}

<form action="@Url.Action("Add", "Currency")" method="POST">
<fieldset>
    <legend>New Currency</legend>
    <label for="name">
        Name
    </label>
    <input type="text" id="name" name="name" placeholder="Name" required maxlength="10" pattern="[A-Za-z\s]{3,}" />
    <span class="help-line">Enter Name for currency, use only 3-10 letters</span>
    <label for="short-name">
        Short Name
    </label>
    <input type="text" id="short-name" name="shortName" placeholder="Short Name"required maxlength="4" pattern="[A-Za-z]{2,}" />
    <span class="help-line">Enter ShortName for currency, use only 2-4 letters</span>
    <label for="symbol">
        Symbol
    </label>
    <input type="text" id="symbol" name="symbol" placeholder="Symbol"required pattern="[\₳\฿\₵\¢\₡\₢\₠\₫\৳\₯\€\ƒ\₣\₲\₴\₭\ℳ\₥\₦\₧\₱\₰\£\₹\₨\₪\₸\₮\₩\¥]{1}" />
    <span class="help-line">Enter Symbol for currancy, use only this ₳ ฿ ₵ ¢ ₡ ₢ ₠ ₫ ৳ ₯ € ƒ ₣ ₲ ₴ ₭ ℳ ₥ ₦ ₧ ₱ ₰ £ ₹ ₨ ₪ ₸ ₮ ₩ ¥ symbols </span>
    <!-- 
    (₳ ฿ ₵ ¢ ₡ ₢ ₠ $ ₫ ৳ ₯ € ƒ ₣ ₲ ₴ ₭ ℳ ₥ ₦ ₧ ₱ ₰ £ ₹ ₨ ₪ ₸ ₮ ₩ ¥ ៛
    -->
    <div>
        <button type="submit" class="btn">
            Create
        </button>
    </div>
</fieldset>
</form>