@using BankingWeb.Controllers
@model System.Collections.Generic.IList<BankingDAL.Entities.Payment>

@{
    ViewBag.Title = "Automatic Payments";
}

<h1>
    Auto payments
</h1>
<table class="table table-striped">
    <tr>
        <th>
            №
        </th>
        <th>
            Amount
        </th>
        <th>
            From
        </th>
        <th>
            To
        </th>
        <th>
            Service Identifier
        </th>
        <th>
            Description
        </th>
        <th>
            Date
        </th>
        <th>
            Action
        </th>
    </tr>
    @for (var i = 0; i < Model.Count; ++i)
    {
        <tr>
            <td>
                @(i + 1)
            </td>
            <td>
                @Model[i].Value
            </td>
            <td>
                @Model[i].From.Number
            </td>
            <td>
                @Model[i].To.Number
            </td>
            <td>
                @(Model[i].ServiceIdentifier ?? "-")
            </td>
            <td>
                @(Model[i].Description ?? "-")
            </td>
            <td>
                @Model[i].Date
            </td>
            <td>
                <a href="@Url.Action("Delete", "Payment", new { id = Model[i].Id })">Delete </a>
            </td>
        </tr> 
    }
</table>
