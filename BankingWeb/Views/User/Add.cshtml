@using BankingWeb.Controllers
@model BankingWeb.Models.UserModel
@{
    ViewBag.Title = "New user";
}
<form action="@Url.Action("Add", "User")" method="POST">
<fieldset>
    <legend>New user </legend>
    <label for="username">
        Username
    </label>
    <input type="text" id="username" name="username" placeholder="Username" class="required" maxlength="20" pattern="[A-Za-z0-9]{4,}">
    <span class="help-line">Field UserName consist of the 4-20 latters or numbers </span>
    <label for="password">
        Password
    </label>
    <input type="password" id="password" name="password" required maxlength="16" pattern="[A-Za-z0-9]{4,}"/>
    <span class="help-line">Field Password consist of the 4-16 latterr or numbers</span>
    <label for="first-name">
        First Name
    </label>
    <input type="text" id="first-name" name="firstName" placeholder="First Name" required maxlength="10" pattern="[A-Za-z]{3,}"/>
    <span class="help-line">Field FirstName consist of the 3-10 latters</span>
    <label for="first-name">
        Last Name
    </label>
    <input type="text" id="last-name" name="lastName" placeholder="Last Name" required  maxlength="15" pattern="[A-Za-z]{3,}"/>
    <span class="help-line">Field LastName consist of the 3-15 latters</span>
    <label for="email">
        Email
    </label>
    <input id="emailvalid" type="email"  name="email" placeholder="Email" required />
    <span class=" help-line">Enter valide email</span>
    <!-- 
    pattern="[A-Za-z0-9]{2,10}@('@')[a-z]{2,6}.[a-z]{2,4}"
    pattern=""
    -->
    <label for="phone">
        Phone
    </label>
    <input type="text" id="phone" name="phone" placeholder="Phone"  maxlength="12" required pattern="^(\+[1-9]{1}[0-9]{2})?[1-9]{2}[1-9]{1}[0-9]{6}$"/>
    <span class="help-line">Enter phone number in format +375xxxxxxxxx or xxxxxxxxx</span>
    <label for="birthday">
        Birthday
    </label>
    <input type="text" placeholder="Birthday" id="birthday" name="birthday" data-date-format="@BaseController.DateFormat.ToLower()" 
        required />
    <input type="hidden" name="role" value="@Model.Role"/>
    <label for="region">Region</label>
    <select name="region" id="region">
        @foreach (var region in Model.Regions)
        {
            <option value="@region.Name">@region.Name</option>
        }
    </select>
    <div>
        <button  type="submit" class="btn" >
            Create
        </button>
    </div>
</fieldset>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        $("#birthday").datepicker({ viewMode: 2 });
    });
</script>


